# Database (required for Prisma migrate / push / generate)
# For Neon on Render: use the POOLED connection string (host contains -pooler)
# e.g. postgresql://user:pass@ep-xxx-pooler.region.aws.neon.tech/db?sslmode=require
DATABASE_URL="postgresql://user:password@host:5432/database?sslmode=require"

# Auth (required for login/register)
JWT_SECRET="your-secret-key-change-in-production"

# App URLs (optional for local dev)
NEXT_PUBLIC_BASE_URL="http://localhost:3000"
NEXT_PUBLIC_API_URL=""

# Email Notifications (optional - uses Resend)
# Sign up at https://resend.com to get your API key
RESEND_API_KEY="re_xxxxxxxxxxxxx"
EMAIL_FROM="Zyntel Feedback <notifications@yourdomain.com>"

# AI Form Builder (optional - "Create with AI" feature)
# FREE: Groq - no credit card. Get key at https://console.groq.com/keys
GROQ_API_KEY="gsk_xxxxxxxxxxxxx"
# Or use OpenAI (paid) - https://platform.openai.com/api-keys
# OPENAI_API_KEY="sk-xxxxxxxxxxxxx"
# If neither is set, keyword-based templates are used instead

